{
  "name": "mon-devis-sans-oublis-frontend",
  "version": "1.0.4",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "build": "next build",
    "start": "next start",
    "start:dev": "next dev",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "validate": "pnpm typecheck && pnpm lint && pnpm test",
    "ci": "pnpm install --frozen-lockfile && pnpm validate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf .next && pnpm dev",
    "fresh": "rm -rf .next node_modules pnpm-lock.yaml && pnpm install && pnpm dev"
  },
  "dependencies": {
    "@gouvfr/dsfr": "^1.13.2",
    "@sentry/nextjs": "^9.2.0",
    "@socialgouv/matomo-next": "^1.9.2",
    "next": "^15.2.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.25.20"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.8",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "eslint": "^9.21.0",
    "eslint-config-next": "^15.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.0.8",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=22.0.0 <23.0.0"
  }
}
